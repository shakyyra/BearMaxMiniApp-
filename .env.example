# --------------------------------------------------------------------
# Основные параметры приложения
# --------------------------------------------------------------------
APP_ENV=development
APP_NAME=BackMax Mini App
APP_VERSION=0.1.0
API_HOST=0.0.0.0
API_PORT=8000
WEB_PORT=3000

# --------------------------------------------------------------------
# База данных (PostgreSQL / SQLAlchemy)
# --------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=backmax
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/backmax

# --------------------------------------------------------------------
# Redis (сессии FastAPI-Admin)
# --------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# --------------------------------------------------------------------
# FastAPI-Admin: стартовый администратор (опционально)
# --------------------------------------------------------------------
ADMIN_DEFAULT_USERNAME=admin
ADMIN_DEFAULT_PASSWORD=change-me


# --------------------------------------------------------------------
# Go-бот MAX
# --------------------------------------------------------------------
MAX_BOT_TOKEN=replace-me
MAX_BOT_GREETING=Привет, запускай скорее мини приложение ниже

# --------------------------------------------------------------------
# Веб-клиент (Vite)
# --------------------------------------------------------------------
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_DEFAULT_ACCOUNT_ID=1
